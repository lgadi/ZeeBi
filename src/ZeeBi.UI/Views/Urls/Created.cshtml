@model ZeeBi.UI.Models.Url
		   
@{
    ViewBag.Title = "URL Shortened!";
}

<style>
	#short-url 
	{
		background: transparent url("/Content/img/link.png") no-repeat;
		display: inline-block;
		background-position: left bottom;
		padding: 20px 0 20px 50px;
	}
	
	#repeat-container 
	{
		display: inline-block;
		height: 60px;
		width: 160px;
		margin: 25px -60px -50px 0;
		padding: 4px 60px 80px 50px;
		background: transparent url("/Content/img/repeat-button.png") no-repeat;
	}
	
	#repeat-button
	{
		width: 100%;
		height: 100%;
		border: 0;
		padding: 0;
		background: transparent;
	}
</style>

<h2><em>URL</em> Shortened!</h2>

<div>
	<div id="short-url-container">
		<a id="short-url" href="/@Model.Id">@Url.RouteUrl("Follow", new { id = Model.Id }, "http")</a>
		<span id="repeat-container"><button id="repeat-button"></button></span>
	</div>
	<div id="info-container">
		Track how users follow your URL at its <a href="@Url.Action("info", "stats", new { id = Model.Id })">info page</a>.
	</div>

</div>
